  //Probando opcionales con enteros
  var num1:Int
  var num2:Int?
  //Asignamos valores
  num1 = 50
  num2 = 20
  print(num1)
  if (num2 == nil){
    print("num2 tiene el valor de nil")
  }else{
    print(num2!)
  }
